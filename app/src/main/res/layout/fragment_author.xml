<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <!-- Thanh tiêu đề -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Nút quay lại -->
        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Back"
            android:layout_gravity="center_vertical" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Mark"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold" />

        <!-- Nút thông báo -->
        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="170dp"
            android:src="@drawable/ic_notification"
            android:contentDescription="Notification"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <!-- Danh sách sản phẩm -->
    <ScrollView
        android:id="@+id/product_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Mục sản phẩm 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <!-- Hình ảnh sản phẩm -->
                <ImageView
                    android:id="@+id/product_image_1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/dnt"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:background="#E0E0E0" />

                <!-- Thông tin sản phẩm -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đắc nhân tâm"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/product_description_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đắc Nhân Tâm là một trong những tựa sách self-help nổi tiếng nhất thế giới với hơn 15 triệu bản được bán ra trên toàn cầu."
                        android:textSize="16sp"
                        android:textColor="#757575"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:id="@+id/buy_now_button_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buy Now"
                        android:textSize="16sp"
                        android:backgroundTint="#FF5722"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="12dp" />
                </LinearLayout>

                <!-- Biểu tượng xóa -->
                <ImageView
                    android:id="@+id/delete_icon_1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Delete Item"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Mục sản phẩm 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <!-- Hình ảnh sản phẩm -->
                <ImageView
                    android:id="@+id/product_image_2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ttdt"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:background="#E0E0E0" />

                <!-- Thông tin sản phẩm -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_name_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trí tuệ do thái"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/product_description_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trí tuệ Do Thái là một cuốn sách tư duy đầy tham vọng trong việc nâng cao khả năng tự học tập, ghi nhớ và phân tích - những điều đã khiến người Do Thá"
                        android:textSize="16sp"
                        android:textColor="#757575"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:id="@+id/buy_now_button_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buy Now"
                        android:textSize="16sp"
                        android:backgroundTint="#FF5722"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="12dp" />
                </LinearLayout>

                <!-- Biểu tượng xóa -->
                <ImageView
                    android:id="@+id/delete_icon_2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Delete Item"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <!-- Mục sản phẩm 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <!-- Hình ảnh sản phẩm -->
                <ImageView
                    android:id="@+id/product_image_3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/psnc"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:background="#E0E0E0" />

                <!-- Thông tin sản phẩm -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_name_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phía sau nghi can"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/product_description_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuốn tiểu thuyết “Phía sau nghi can X” của Higashino Keigo mở đầu với sự việc Yasuko Hanaoka và đứa con gái Misato Hanaoka đã giết Togasi - chồng cũ của cô, bởi ..."
                        android:textSize="16sp"
                        android:textColor="#757575"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:id="@+id/buy_now_button_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buy Now"
                        android:textSize="16sp"
                        android:backgroundTint="#FF5722"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="12dp" />
                </LinearLayout>

                <!-- Biểu tượng xóa -->
                <ImageView
                    android:id="@+id/delete_icon_3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Delete Item"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp" />
            </LinearLayout>
            <!-- Mục sản phẩm 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <!-- Hình ảnh sản phẩm -->
                <ImageView
                    android:id="@+id/product_image_4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/tttl"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:background="#E0E0E0" />

                <!-- Thông tin sản phẩm -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_name_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thao túng tâm lý "
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/product_description_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuốn sách “Thao Túng Tâm Lý” viết bởi tác giả Shannon Thomas sẽ mang đến cho độc giả cái nhìn về những vấn đề liên quan đến thao túng và lạm ..."
                        android:textSize="16sp"
                        android:textColor="#757575"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:id="@+id/buy_now_button_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buy Now"
                        android:textSize="16sp"
                        android:backgroundTint="#FF5722"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="12dp" />
                </LinearLayout>

                <!-- Biểu tượng xóa -->
                <ImageView
                    android:id="@+id/delete_icon_4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Delete Item"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
